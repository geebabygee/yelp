<div class="container margin-top">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <h2><%= @restaurant.name %></h2>
      <p>
        <strong>Address:</strong>
        <%= @restaurant.address %>
      </p>
      <p>
        <strong>Phone Number:</strong>
        <%= @restaurant.phone_number %>
      </p>
      <p>
        <strong>Category:</strong>
        <%= @restaurant.category %>
      </p>
      <p>
        <strong>Reviews Number:</strong>
        <%= @restaurant.reviews.count %>
      </p>
    </div>
    <div class="col-xs-12 col-sm-4">
      <h4><strong>Review for <%= @restaurant.name %></strong></h4>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <h4><strong>Reviews</strong></h4>
      <ul>
        <% if @restaurant.reviews.any? %>
          <% @restaurant.reviews.each do |review| %>
            <li>
              <%= review.content %>&nbsp;|&nbsp;&nbsp;
              <strong> <%stars = "*" * review.rating %><%= stars%></strong>
            <% end %>
          </li>
        </ul>
      </div>
    <% else %>
      <p>This restaurant has no reviews yet!</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <%= link_to 'Back', restaurants_path, style: 'font-size:25px;' %>
    </div>
  </div>
</div>